		alert("TODO call ajax to add user to queue.")
	}

	function bananaMouseDown() {
		$("#bananaImage").attr("src", "http://i.imgur.com/fjbup.gif");
	}

	function bananaMouseUp() {
		$("#bananaImage").attr("src", "http://files.enjin.com.s3.amazonaws.com/265719/modules/forum/attachments/bananaAnimated_1423001776.png");
		$("#bananaImage").attr("height", "253");
		$("#bananaImage").attr("width", "500");
	}

</script>
